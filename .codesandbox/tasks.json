{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "tasks": {
    "tailscaled": {
      "name": "Start Tailscaled",
      "command": "docker run -d --name=tailscaled -v /var/run/tailscale/tailscaled.sock:/tmp/tailscaled.sock -v /var/lib:/var/lib -v /dev/net/tun:/dev/net/tun --network=host --cap-add=NET_ADMIN --cap-add=NET_RAW -cap-add=SYS_MODULE --env TS_AUTHKEY=${TS_AUTHKEY} tailscale/tailscale 
      "restartOn": {
        "branch": true
      },
      "runAtStart": true
    },
  }
}
